{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"apps/**/*.{ts,tsx,js,jsx,json}",
			"packages/**/*.{ts,tsx,js,jsx,json}",
			"*.{ts,tsx,js,jsx,json,md}",
			"!!**/node_modules",
			"!!**/dist",
			"!!**/build",
			"!!**/.wrangler",
			"!!**/coverage",
			"!!apps/pages/worker-configuration.d.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
